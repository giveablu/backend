APP_NAME="BluGives"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_URL=https://staging.service.blu.gives

LOG_CHANNEL=stack
LOG_LEVEL=info

# Clients should use: https://staging.service.blu.gives/api

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=blugives_staging
DB_USERNAME=blugives_staging
DB_PASSWORD=

CACHE_DRIVER=file
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# If you use cookie-based Sanctum auth for the web app:
# - CORS must allow your web origin(s)
# - Sanctum must treat the web domain(s) as stateful
CORS_ALLOWED_ORIGINS=https://staging.blu.gives
CORS_ALLOWED_ORIGINS_PATTERNS=
CORS_SUPPORTS_CREDENTIALS=true
SANCTUM_STATEFUL_DOMAINS=staging.blu.gives,localhost,localhost:3000
SESSION_DOMAIN=staging.blu.gives

MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="no-reply@staging.blu.gives"
MAIL_FROM_NAME="${APP_NAME}"

# Storage (optional)
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Impact feed (optional)
IMPACT_FEED_URL=
IMPACT_FEED_API_KEY=

# Social auth (set these to your STAGING web domain callback)
SOCIAL_FACEBOOK_CLIENT_ID=
SOCIAL_FACEBOOK_CLIENT_SECRET=
SOCIAL_FACEBOOK_REDIRECT_URI=https://staging.blu.gives/auth/social/callback
SOCIAL_FACEBOOK_GRAPH_VERSION=v24.0

SOCIAL_INSTAGRAM_CLIENT_ID=
SOCIAL_INSTAGRAM_CLIENT_SECRET=
SOCIAL_INSTAGRAM_REDIRECT_URI=https://staging.blu.gives/auth/social/callback
SOCIAL_INSTAGRAM_GRAPH_VERSION=v24.0
INSTAGRAM_VERIFY_TOKEN=

SOCIAL_X_CLIENT_ID=
SOCIAL_X_CLIENT_SECRET=
SOCIAL_X_REDIRECT_URI=https://staging.blu.gives/auth/social/callback
SOCIAL_X_API_KEY=
SOCIAL_X_API_SECRET=
SOCIAL_X_APP_SCOPE=

SOCIAL_GOOGLE_CLIENT_ID=
SOCIAL_GOOGLE_CLIENT_SECRET=
SOCIAL_GOOGLE_REDIRECT_URI=https://staging.blu.gives/auth/social/callback

# PayPal (if you still use /api/paypal/* endpoints)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_API_BASE=https://api-m.sandbox.paypal.com
